pipeline {

  agent any 
        tools {
           terraform 'terraform'
            }
environment{
        GOOGLE_APPLICATION_CREDENTIALS= credentials('GCP_TF_SA')
    }   
stages {
    
 stage('Initialize'){
            steps{
                sh 'terraform init'
            }
        }
        
   stage('Plan'){
            steps{
                sh 'terraform plan'
            }
        }
        stage('Apply'){
            steps{
                sh 'terraform apply -auto-approve'
            }
        }     
     }
   }




